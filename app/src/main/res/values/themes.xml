        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="appColorPrimary">@color/black</item>
        <item name="appColorPrimaryVariant1">@color/grey_200</item>
        <item name="appColorPrimaryVariant2">@color/grey_500</item>
